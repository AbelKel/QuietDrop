{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/2.0.0-alpha/core/tauri-config-schema/schema.json",
  "identifier": "com.quietdrop.app",
  "productName": "QuietDrop",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "QuietDrop",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}